{% extends "customer_portal/base.html" %}

{% block title %}Dashboard{% endblock %}

{% block content %}
<div class="mb-8">
  <h1 class="text-3xl font-bold text-dark-text mb-2">Welcome back, {{ customer.first_name }}!</h1>
  <p class="text-dark-muted">Here's an overview of your jobs with {{ config.BRANDING_COMPANY_NAME }}</p>
</div>

<!-- Job Statistics -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-dark-card border border-dark-border rounded-lg p-6 text-center">
    <div class="text-3xl font-bold text-blue-400 mb-2">{{ stats.total }}</div>
    <div class="text-dark-muted">Total Jobs</div>
  </div>
  <div class="bg-dark-card border border-dark-border rounded-lg p-6 text-center">
    <div class="text-3xl font-bold text-yellow-400 mb-2">{{ stats.pending }}</div>
    <div class="text-dark-muted">In Progress</div>
  </div>
  <div class="bg-dark-card border border-dark-border rounded-lg p-6 text-center">
    <div class="text-3xl font-bold text-green-400 mb-2">{{ stats.completed }}</div>
    <div class="text-dark-muted">Completed</div>
  </div>
  <div class="bg-dark-card border border-dark-border rounded-lg p-6 text-center">
    <div class="text-3xl font-bold text-red-400 mb-2">{{ stats.overdue }}</div>
    <div class="text-dark-muted">Overdue</div>
  </div>
</div>

<!-- Recent Jobs -->
<div class="bg-dark-card border border-dark-border rounded-lg">
  <div class="flex justify-between items-center p-6 border-b border-dark-border">
    <h5 class="text-lg font-semibold text-dark-text">Recent Jobs</h5>
    <a href="{{ url_for('customer_portal.jobs_list') }}" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors">View All Jobs</a>
  </div>
  <div class="p-6">
    {% if jobs %}
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-dark-border">
          <thead>
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-dark-muted uppercase tracking-wider">Job #</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-dark-muted uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-dark-muted uppercase tracking-wider">Description</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-dark-muted uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-dark-muted uppercase tracking-wider">Due Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-dark-muted uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-dark-border">
            {% for job in jobs[:5] %}
            <tr class="hover:bg-dark-hover transition-colors">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-dark-text">{{ job.id }}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-dark-text">{{ job.created_at[:10] if job.created_at else 'N/A' }}</td>
              <td class="px-6 py-4 text-sm text-dark-text">{{ job.description[:50] if job.description else 'No description' }}{{ '...' if job.description and job.description|length > 50 else '' }}</td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                  {% if job.status == 'Completed' %}bg-green-900/20 text-green-300 border border-green-500/50
                  {% elif job.status == 'Ready for Pickup' %}bg-blue-900/20 text-blue-300 border border-blue-500/50
                  {% elif job.status == 'In Progress' %}bg-yellow-900/20 text-yellow-300 border border-yellow-500/50
                  {% elif job.status == 'Not Started' %}bg-gray-900/20 text-gray-300 border border-gray-500/50
                  {% else %}bg-blue-900/20 text-blue-300 border border-blue-500/50{% endif %}">
                  {{ job.status }}
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-dark-text">{{ job.due_by if job.due_by else 'No due date' }}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <a href="{{ url_for('customer_portal.job_detail', job_id=job.id) }}"
                   class="px-3 py-1 bg-dark-hover hover:bg-blue-600 text-dark-text hover:text-white text-xs font-medium rounded transition-colors border border-dark-border hover:border-blue-500">
                  View
                </a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    {% else %}
      <div class="text-center py-8">
        <p class="text-dark-muted mb-4">You haven't submitted any jobs yet.</p>
        <div class="flex gap-3 justify-center">
          <a href="{{ url_for('intake.intake_form') }}" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors">
            Production Intake
          </a>
          <a href="{{ url_for('intake.railing_intake') }}" class="px-4 py-2 bg-dark-hover hover:bg-blue-600 text-dark-text hover:text-white font-medium rounded-lg transition-colors border border-dark-border hover:border-blue-500">
            Railing Intake
          </a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<!-- Quick Actions -->
{% if jobs %}
<div class="mt-8">
  <div class="bg-dark-card border border-dark-border rounded-lg">
    <div class="p-6 border-b border-dark-border">
      <h5 class="text-lg font-semibold text-dark-text">Quick Actions</h5>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <a href="{{ url_for('intake.intake_form') }}" class="px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors text-center">
          Production Intake Form
        </a>
        <a href="{{ url_for('intake.railing_intake') }}" class="px-4 py-3 bg-dark-hover hover:bg-blue-600 text-dark-text hover:text-white font-medium rounded-lg transition-colors text-center border border-dark-border hover:border-blue-500">
          Railing Intake Form
        </a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a href="{{ url_for('customer_portal.jobs_list') }}" class="px-4 py-3 bg-dark-hover hover:bg-blue-600 text-dark-text hover:text-white font-medium rounded-lg transition-colors text-center border border-dark-border hover:border-blue-500">
          View All Jobs
        </a>
        <a href="{{ url_for('customer_portal.profile') }}" class="px-4 py-3 bg-dark-hover hover:bg-gray-600 text-dark-text hover:text-white font-medium rounded-lg transition-colors text-center border border-dark-border hover:border-gray-500">
          Update Profile
        </a>
      </div>
    </div>
  </div>
</div>
{% endif %}
{% endblock %}
